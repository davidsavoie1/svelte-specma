{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": { "es6": true, "browser": true },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "prettier"],
  "settings": {
    "import/core-modules": ["svelte/store"]
  },
  "rules": {
    "no-console": "error",
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "prettier/prettier": "error"
  }
}
